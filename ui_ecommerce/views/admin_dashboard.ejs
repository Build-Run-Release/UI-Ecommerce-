<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - UI Ecommerce</title>
    <style>
        /* 1. Base Styles */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            display: flex;
            min-height: 100vh;
        }

        /* 2. Sidebar Navigation (Admin Purple/Dark Theme) */
        .sidebar {
            width: 250px;
            background-color: #1a1a2e; /* Dark Navy/Purple */
            padding: 20px;
            color: white;
            display: flex;
            flex-direction: column;
        }

        .brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #fff;
            margin-bottom: 40px;
            text-decoration: none;
            border-bottom: 1px solid #333;
            padding-bottom: 20px;
        }

        .nav-links a {
            display: block;
            padding: 12px 15px;
            color: #a0a0c0;
            text-decoration: none;
            border-radius: 8px;
            margin-bottom: 10px;
            transition: background 0.2s;
        }

        .nav-links a:hover, .nav-links a.active {
            background-color: #16213e;
            color: #fff;
        }

        .logout-btn {
            margin-top: auto;
            color: #ff6b6b !important;
        }

        /* 3. Main Content Area */
        .main-content {
            flex: 1;
            padding: 30px;
            overflow-y: auto;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        /* 4. Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .card {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

        .card h3 { margin: 0 0 10px; color: #888; font-size: 0.9rem; font-weight: normal; }
        .card .value { font-size: 1.8rem; font-weight: bold; color: #333; }

        /* 5. User Table */
        .table-container {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

        table { width: 100%; border-collapse: collapse; }
        th, td { text-align: left; padding: 15px; border-bottom: 1px solid #eee; }
        th { background-color: #fafafa; color: #666; font-size: 0.9rem; }

        /* Status Badges */
        .badge {
            padding: 5px 10px;
            border-radius: 12px;
            font-size: 0.8rem;
            font-weight: bold;
        }
        .role-admin { background-color: #000; color: #fff; }
        .role-seller { background-color: #007bff; color: #fff; }
        .role-buyer { background-color: #6c757d; color: #fff; }
        
        .status-active { color: #28a745; font-weight: bold; }
        .status-blocked { color: #dc3545; font-weight: bold; }

        /* Action Buttons */
        .btn-action {
            border: none;
            padding: 6px 12px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.85rem;
            color: white;
        }
        .btn-block { background-color: #dc3545; }
        .btn-unblock { background-color: #28a745; }

    </style>
</head>
<body>

    <div class="sidebar">
        <a href="/" class="brand">ADMIN PANEL</a>
        
        <div class="nav-links">
            <a href="/admin_dashboard" class="active">Overview</a>
            <a href="#users" onclick="document.getElementById('users').scrollIntoView({behavior: 'smooth'})">User Management</a>
            <a href="/">View Live Site</a>
            <a href="/logout" class="logout-btn">Logout</a>
        </div>
    </div>

    <div class="main-content">
        
        <div class="header">
            <h1>Admin Dashboard</h1>
            <div>
                <strong>System Status:</strong> <span style="color: #28a745;">Operational</span>
            </div>
        </div>

        <div class="stats-grid">
            <div class="card" style="border-left: 5px solid #6610f2;">
                <h3>Total Users</h3>
                <div class="value"><%= users.length %></div>
            </div>
            <div class="card" style="border-left: 5px solid #28a745;">
                <h3>Platform Revenue</h3>
                <div class="value">₦<%= (stats.total_revenue || 0).toLocaleString() %></div>
            </div>
            <div class="card" style="border-left: 5px solid #fd7e14;">
                <h3>Total Orders</h3>
                <div class="value"><%= stats.total_orders || 0 %></div>
            </div>
        </div>

        <div id="users" class="table-container">
            <h2 style="margin-top: 0; border-bottom: 1px solid #eee; padding-bottom: 15px;">User Management</h2>
            
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Role</th>
                        <th>Wallet</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(function(u) { %>
                        <tr>
                            <td>#<%= u.id %></td>
                            <td><%= u.username %></td>
                            <td>
                                <span class="badge role-<%= u.role %>"><%= u.role.toUpperCase() %></span>
                            </td>
                            <td>₦<%= (u.wallet_balance || 0).toLocaleString() %></td>
                            <td>
                                <% if (u.is_blocked) { %>
                                    <span class="status-blocked">BLOCKED</span>
                                <% } else { %>
                                    <span class="status-active">Active</span>
                                <% } %>
                            </td>
                            <td>
                                <% if (u.role !== 'admin') { %>
                                    <form action="/admin/user/<%= u.id %>/toggle-block" method="POST">
                                        <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                                        <% if (u.is_blocked) { %>
                                            <button type="submit" class="btn-action btn-unblock">Unblock</button>
                                        <% } else { %>
                                            <button type="submit" class="btn-action btn-block">Block</button>
                                        <% } %>
                                    </form>
                                <% } else { %>
                                    <span style="color: #ccc;">-</span>
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

    </div>

</body>
</html>