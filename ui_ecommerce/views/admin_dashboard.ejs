<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/modern.css">
    <style>
        /* Extra styles for Admin Badges not in base theme */
        .role-admin {
            background: #000;
            color: white;
        }

        .role-seller {
            background: var(--primary-color);
            color: white;
        }

        .role-buyer {
            background: var(--secondary-color);
            color: white;
        }

        .text-danger {
            color: #ef4444 !important;
        }

        .text-warning {
            color: #f59e0b !important;
        }
    </style>
</head>

<body>

    <div class="overlay" onclick="toggleSidebar()"></div>

    <nav class="sidebar" id="sidebar">
        <div class="brand">
            <span>Admin Panel</span>
            <button class="close-sidebar" onclick="toggleSidebar()">√ó</button>
        </div>

        <div class="nav-links">
            <a href="#" class="active">Overview</a>
            <a href="#users">User Management</a>
            <a href="/">View Live Site</a>
            <div style="margin-top: auto;">
                <a href="/logout" style="color: var(--danger-color);">Logout</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="header">
            <div class="header-left">
                <button class="menu-toggle" onclick="toggleSidebar()">‚ò∞</button>
                <h1 style="margin: 0;">Dashboard</h1>
            </div>
        </div>

        <div class="stats-grid">
            <div class="card stat-card">
                <span class="stat-label">Total Users</span>
                <span class="stat-value">
                    <%= users.length %>
                </span>
            </div>
            <div class="card stat-card" style="border-left: 4px solid var(--success-color);">
                <span class="stat-label">Revenue</span>
                <span class="stat-value">‚Ç¶<%= (stats.total_revenue || 0).toLocaleString() %></span>
            </div>
            <div class="card stat-card" style="border-left: 4px solid var(--warning-color);">
                <span class="stat-label">Total Orders</span>
                <span class="stat-value">
                    <%= stats.total_orders || 0 %>
                </span>
            </div>
        </div>

        <!-- SUSPICIOUS USERS SECTION -->
        <% if (typeof flaggedUsers !=='undefined' && flaggedUsers.length> 0) { %>
            <div class="card" style="border: 1px solid #fee2e2;">
                <h2 style="color: var(--danger-color);">‚ö†Ô∏è Suspicious Activity Detected</h2>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Suspicion Score</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% flaggedUsers.forEach(function(u) { %>
                                <tr>
                                    <td>
                                        <strong>
                                            <%= u.username %>
                                        </strong><br>
                                        <small>ID: <%= u.id %></small>
                                    </td>
                                    <td>
                                        <div class="<%= u.suspicion_score > 100 ? 'text-danger' : 'text-warning' %>"
                                            style="font-weight: bold;">
                                            <%= u.suspicion_score %>
                                        </div>
                                        <small style="color: #666;">Points</small>
                                    </td>
                                    <td>
                                        <% if (u.is_flagged) { %>
                                            <span class="badge badge-danger">FLAGGED</span>
                                            <% } else { %>
                                                <span class="badge badge-warning">Watchlist</span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <button class="btn btn-danger btn-sm"
                                            onclick="openBanModal('<%= u.id %>', '<%= u.username %>')">Restrict</button>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
            <% } %>

                <!-- FEEDBACK SECTION -->
                <% if (typeof feedback !=='undefined' && feedback.length> 0) { %>
                    <div class="card" id="feedback">
                        <h2>üì¢ User Feedback & Complaints</h2>
                        <div class="table-responsive">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>User / Email</th>
                                        <th>Type</th>
                                        <th>Message</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% feedback.forEach(function(f) { %>
                                        <tr>
                                            <td>
                                                <%= new Date(f.created_at).toLocaleDateString() %><br>
                                                    <small>
                                                        <%= new Date(f.created_at).toLocaleTimeString() %>
                                                    </small>
                                            </td>
                                            <td>
                                                <strong>
                                                    <%= f.name || 'Anonymous' %>
                                                </strong><br>
                                                <small>
                                                    <%= f.email || 'No Email' %>
                                                </small>
                                                <% if (f.user_id) { %>
                                                    <br><a href="#user-<%= f.user_id %>" style="font-size: 0.8em;">(View
                                                        User)</a>
                                                    <% } %>
                                            </td>
                                            <td>
                                                <span
                                                    class="badge <%= f.message_type === 'complaint' ? 'badge-danger' : 'badge-success' %>">
                                                    <%= f.message_type ? f.message_type.toUpperCase() : 'GENERAL' %>
                                                </span>
                                            </td>
                                            <td style="max-width: 300px; white-space: normal;">
                                                <%= f.message %>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <% } %>

                        <div class="card" id="users">
                            <h2>User Management</h2>
                            <div class="table-responsive">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>User Details</th>
                                            <th>Role</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% users.forEach(function(u) { %>
                                            <tr>
                                                <td>#<%= u.id %>
                                                </td>
                                                <td>
                                                    <strong>
                                                        <%= u.username %>
                                                    </strong><br>
                                                    <small style="color: var(--text-muted);">
                                                        <%= u.email || 'No email' %>
                                                    </small>
                                                </td>
                                                <td><span class="badge role-<%= u.role %>">
                                                        <%= u.role.toUpperCase() %>
                                                    </span></td>
                                                <td>
                                                    <% if (u.ban_expires && new Date(Number(u.ban_expires))> new Date())
                                                        { %>
                                                        <span class="badge badge-warning">
                                                            Temp Ban (<%= Math.ceil((new Date(Number(u.ban_expires)) -
                                                                new Date()) / (1000 * 60 * 60 * 24)) %>d)
                                                        </span>
                                                        <% } else if (Number(u.is_blocked) !==0) { %>
                                                            <span class="badge badge-danger">Permanent Ban</span>
                                                            <% } else { %>
                                                                <span class="badge badge-success">Active</span>
                                                                <% } %>
                                                </td>
                                                <td>
                                                    <% if (u.role !=='admin' ) { %>
                                                        <% if (Number(u.is_blocked) !==0 || (u.ban_expires && new
                                                            Date(Number(u.ban_expires))> new Date())) { %>
                                                            <form action="/admin/user/<%= u.id %>/unban" method="POST"
                                                                style="display:inline;">
                                                                <input type="hidden" name="_csrf"
                                                                    value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                                                                <button class="btn btn-success btn-sm">Unban</button>
                                                            </form>
                                                            <% } else { %>
                                                                <button type="button" class="btn btn-danger btn-sm"
                                                                    onclick="openBanModal('<%= u.id %>', '<%= u.username %>')">
                                                                    Ban
                                                                </button>
                                                                <% } %>
                                                                    <% } else { %>
                                                                        <span style="color: var(--text-muted);">‚Äî</span>
                                                                        <% } %>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
    </main>

    <!-- Ban Modal -->
    <div id="banModal" class="modal">
        <div class="modal-content">
            <span class="close-modal" onclick="closeBanModal()">&times;</span>
            <h2>Ban User</h2>
            <p>Select ban type for <strong id="modalUsername">User</strong>:</p>

            <form id="banForm" method="POST">
                <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">

                <label>Ban Type</label>
                <select id="banType" name="type" onchange="toggleDurationInput()">
                    <option value="permanent">Permanent Ban</option>
                    <option value="temporary">Temporary Ban</option>
                </select>

                <div id="durationGroup" style="display: none;">
                    <label>Duration (Days)</label>
                    <input type="number" name="days" placeholder="e.g. 7" min="1">
                </div>

                <label>Reason (Optional)</label>
                <input type="text" name="reason" placeholder="Violation of terms...">

                <button type="submit" class="btn btn-danger" style="width: 100%; margin-top: 20px;">Confirm Ban</button>
            </form>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('active');
            document.querySelector('.overlay').classList.toggle('active');
        }

        // --- BAN MODAL LOGIC ---
        function openBanModal(userId, username) {
            document.getElementById('modalUsername').innerText = username;
            document.getElementById('banForm').action = "/admin/user/" + userId + "/ban";
            document.getElementById('banType').value = 'permanent';
            document.getElementById('durationGroup').style.display = 'none';
            document.getElementById('banModal').classList.add('active');
        }

        function closeBanModal() {
            document.getElementById('banModal').classList.remove('active');
        }

        function toggleDurationInput() {
            const type = document.getElementById('banType').value;
            const durationGroup = document.getElementById('durationGroup');

            if (type === 'temporary') {
                durationGroup.style.display = 'block';
                durationGroup.querySelector('input').required = true;
            } else {
                durationGroup.style.display = 'none';
                durationGroup.querySelector('input').required = false;
            }
        }

        window.onclick = function (event) {
            if (event.target.classList.contains('modal')) {
                closeBanModal();
            }
        }
    </script>
</body>

</html>