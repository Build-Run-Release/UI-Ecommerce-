<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buyer Dashboard - UI Market</title>
    <link rel="stylesheet" href="/css/modern.css">
</head>

<body>

    <div class="overlay"></div>

    <div class="sidebar" id="sidebar">
        <div class="brand">
            <span>UI Market</span>
            <button class="close-sidebar">×</button>
        </div>

        <div class="nav-links">
            <a href="/buyer/dashboard" class="active">Dashboard</a>
            <a href="/">Browse Shop</a>
            <a href="/settings">Settings</a>
            <a href="/feedback">Feedback/Report</a>
            <div style="margin-top: auto;">
                <a href="/logout" style="color: #ef4444;">Logout</a>
            </div>
        </div>
    </div>

    <div class="main-content">

        <div class="header">
            <div class="header-left">
                <button class="menu-toggle">☰</button>
                <h1 style="margin: 0; font-size: 1.5rem;">My Dashboard</h1>
            </div>

            <div class="header-actions" style="display: flex; align-items: center; gap: 20px;">
                <div style="text-align: right;">
                    <small style="color: var(--text-muted);">Wallet Balance</small><br>
                    <strong style="color: var(--text-main); font-size: 1.1rem;">₦<%= (user.wallet_balance ||
                            0).toLocaleString() %></strong>
                </div>

                <button class="btn btn-success btn-sm" id="fundAccountBtn" data-paystack-key="<%= paystackKey %>"
                    data-user-email="<%= user.email %>">+ Fund</button>
            </div>
        </div>

        <div class="stats-grid">
            <div class="card stat-card" style="border-left: 4px solid var(--primary-color);">
                <span class="stat-label">Wallet Balance</span>
                <span class="stat-value">₦<%= (user.wallet_balance || 0).toLocaleString() %></span>
            </div>

            <div class="card stat-card" style="border-left: 4px solid var(--success-color);">
                <span class="stat-label">Total Orders</span>
                <span class="stat-value">
                    <%= (typeof orders !=='undefined' ) ? orders.length : 0 %>
                </span>
            </div>

            <div class="card stat-card" style="border-left: 4px solid var(--warning-color);">
                <span class="stat-label">Pending Items</span>
                <span class="stat-value">
                    <%= (typeof cartItems !=='undefined' ) ? cartItems.length : 0 %>
                </span>
            </div>
        </div>

        <!-- Recent Orders -->
        <div class="card">
            <h2>My Orders</h2>
            <div class="table-responsive">
                <% if (typeof orders !=='undefined' && orders.length> 0) { %>
                    <table>
                        <thead>
                            <tr>
                                <th>Order #</th>
                                <th>Item</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Secret Code</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach(function(order) { %>
                                <tr>
                                    <td>#<%= order.id %>
                                    </td>
                                    <td>
                                        <%= order.product_title || 'Item #' + order.product_id %>
                                    </td>
                                    <td>₦<%= order.amount.toLocaleString() %>
                                    </td>
                                    <td>
                                        <% if (order.buyer_confirmed) { %>
                                            <span class="badge badge-success">Completed</span>
                                            <% } else if (order.seller_confirmed) { %>
                                                <span class="badge badge-blue">Shipped</span>
                                                <% } else { %>
                                                    <span class="badge badge-warning">Processing</span>
                                                    <% } %>
                                    </td>
                                    <td>
                                        <% if (!order.buyer_confirmed && !order.escrow_released) { %>
                                            <div
                                                style="background: #f3f4f6; padding: 5px; border-radius: 4px; border: 1px dashed #aaa; text-align: center;">
                                                <strong style="font-size: 1.1em; letter-spacing: 2px;">
                                                    <%= order.delivery_code %>
                                                </strong>
                                                <div style="font-size: 0.75rem; color: #dc2626; margin-top: 2px;">Give
                                                    to seller ONLY on receipt</div>
                                            </div>
                                            <% } else { %>
                                                <span style="color: #bbb;">Used</span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <% if (order.seller_confirmed && !order.buyer_confirmed) { %>
                                            <form action="/order/<%= order.id %>/confirm/buyer" method="POST">
                                                <input type="hidden" name="_csrf"
                                                    value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                                                <button class="btn btn-success btn-sm">Confirm Receipt</button>
                                            </form>
                                            <% } else if (order.buyer_confirmed) { %>
                                                <span style="color: var(--success-color);">✓ Received</span>
                                                <% } else { %>
                                                    <span style="color: var(--text-muted);">...</span>
                                                    <% } %>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                    <% } else { %>
                        <p style="color: var(--text-muted);">No orders yet.</p>
                        <% } %>
            </div>
        </div>

        <% if (typeof cartItems !=='undefined' && cartItems.length> 0) { %>
            <div class="card">
                <h2>Shopping Cart</h2>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Price</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% cartItems.forEach(function(item) { %>
                                <tr>
                                    <td>
                                        <%= item.title %>
                                    </td>
                                    <td>₦<%= item.price %>
                                    </td>
                                    <td>
                                        <div style="display: flex; gap: 10px;">
                                            <a href="/buy/<%= item.id %>" class="btn btn-primary btn-sm">Buy Now</a>
                                            <form action="/cart/remove" method="POST">
                                                <input type="hidden" name="cart_id" value="<%= item.cart_id %>">
                                                <input type="hidden" name="_csrf"
                                                    value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                                                <button class="btn btn-danger btn-sm">Remove</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
            <% } %>

                <% if (typeof wishlistItems !=='undefined' && wishlistItems.length> 0) { %>
                    <div class="card">
                        <h2>My Wishlist</h2>
                        <div class="table-responsive">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Item</th>
                                        <th>Price</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% wishlistItems.forEach(function(item) { %>
                                        <tr>
                                            <td>
                                                <%= item.title %>
                                            </td>
                                            <td>₦<%= item.price %>
                                            </td>
                                            <td>
                                                <div style="display: flex; gap: 10px;">
                                                    <form action="/cart/add" method="POST">
                                                        <input type="hidden" name="product_id" value="<%= item.id %>">
                                                        <input type="hidden" name="_csrf"
                                                            value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                                                        <button class="btn btn-primary btn-sm">Move to Cart</button>
                                                    </form>
                                                    <form action="/wishlist/remove" method="POST">
                                                        <input type="hidden" name="wishlist_id"
                                                            value="<%= item.wishlist_id %>">
                                                        <input type="hidden" name="_csrf"
                                                            value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                                                        <button class="btn btn-danger btn-sm">×</button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <% } %>

    </div>

    <!-- Paystack Inline Script -->
    <script src="https://js.paystack.co/v1/inline.js"></script>

    <script src="/js/buyer_dashboard.js"></script>

</body>

</html>