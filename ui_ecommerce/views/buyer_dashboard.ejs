<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buyer Dashboard - UI Market</title>
    <style>
        /* --- 1. Base Reset --- */
        * { box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            display: flex;
            min-height: 100vh;
        }

        a { text-decoration: none; color: inherit; }

        /* --- 2. Sidebar Navigation --- */
        .sidebar {
            width: 250px;
            background-color: #fff;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            border-right: 1px solid #ddd;
            z-index: 1000;
        }

        .brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 40px;
            display: block;
        }

        .nav-links a {
            display: block;
            padding: 12px 15px;
            color: #555;
            border-radius: 8px;
            margin-bottom: 10px;
            transition: background 0.2s;
            font-weight: 500;
        }

        .nav-links a:hover, .nav-links a.active {
            background-color: #e6f0ff;
            color: #007bff;
        }

        .logout-btn {
            margin-top: auto;
            color: #dc3545 !important;
        }
        .logout-btn:hover { background-color: #ffe6e6 !important; }

        /* --- 3. Main Content Area --- */
        .main-content {
            margin-left: 250px; /* Moves content to right of sidebar */
            width: calc(100% - 250px);
            padding: 30px;
        }

        /* --- 4. Header & Balance Section --- */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            background-color: #f0f2f5;
        }

        .header h1 { margin: 0; color: #333; }

        .header-actions {
            display: flex;
            align-items: center;
            gap: 20px;
            background: white;
            padding: 10px 20px;
            border-radius: 12px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        .balance-box {
            text-align: right;
            border-right: 1px solid #eee;
            padding-right: 15px;
            margin-right: 10px;
        }

        .btn-fund {
            background-color: #28a745;
            color: white;
            padding: 8px 15px;
            border-radius: 6px;
            font-size: 0.85rem;
            font-weight: bold;
            border: none;
            cursor: pointer;
            transition: 0.2s;
        }
        .btn-fund:hover { background-color: #218838; }

        /* --- 5. Stats Cards --- */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .card {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }

        .card h3 { margin: 0 0 10px; color: #888; font-size: 0.9rem; font-weight: normal; }
        .card .value { font-size: 1.8rem; font-weight: bold; color: #333; }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="/" class="brand">UI Market</a>
        
        <div class="nav-links">
            <a href="/buyer/dashboard" class="active">Dashboard</a>
            <a href="/">Browse Shop</a>
            <a href="/logout" class="logout-btn">Logout</a>
        </div>
    </div>

    <div class="main-content">
        
        <div class="header">
            <h1>Dashboard</h1>
    
            <div class="header-actions">
                <div class="balance-box">
                    <small style="color: #666;">Wallet Balance</small><br>
                    <strong style="font-size: 1.2rem; color: #333;">₦<%= (user.wallet_balance || 0).toLocaleString() %></strong>
                </div>

                <button class="btn-fund" onclick="initiatePayment()">+ Fund Wallet</button>
            </div>
        </div>

        <div class="stats-grid">
            <div class="card" style="border-left: 5px solid #007bff;">
                <h3>Wallet Balance</h3>
                <div class="value">₦<%= (user.wallet_balance || 0).toLocaleString() %></div>
            </div>
            
            <div class="card" style="border-left: 5px solid #28a745;">
                <h3>Total Orders</h3>
                <div class="value"><%= (typeof orders !== 'undefined') ? orders.length : 0 %></div>
            </div>
            
            <div class="card" style="border-left: 5px solid #ffc107;">
                <h3>Pending Items</h3>
                <div class="value"><%= (typeof cartItems !== 'undefined') ? cartItems.length : 0 %></div>
            </div>
        </div>

    </div>

    <script src="https://js.paystack.co/v1/inline.js"></script>

    <script>
        // REPLACE WITH YOUR PUBLIC KEY
        const PAYSTACK_PUBLIC_KEY = '<%= paystackKey %>'; 

        function initiatePayment() {
            const amountStr = prompt("Enter amount to fund (₦):");
            if (!amountStr) return;

            const amount = parseFloat(amountStr);
            if (isNaN(amount) || amount <= 0) {
                alert("Please enter a valid amount.");
                return;
            }

            const handler = PaystackPop.setup({
                key: PAYSTACK_PUBLIC_KEY,
                email: "<%= user.email || user.username + '@example.com' %>", 
                amount: amount * 100, // Convert to Kobo
                currency: "NGN",
                ref: '' + Math.floor((Math.random() * 1000000000) + 1),
                
                callback: function(response) {
                    // Redirect to backend verification
                    window.location.href = "/paystack/verify?reference=" + response.reference;
                },
                
                onClose: function() {
                    alert('Transaction was closed.');
                }
            });

            handler.openIframe();
        }
    </script>

</body>
</html>