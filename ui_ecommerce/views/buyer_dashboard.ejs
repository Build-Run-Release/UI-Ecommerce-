<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buyer Dashboard - UI Market</title>
    <style>
        /* [ ... Keep previous CSS styles ... ] */
        
        /* New Style for Fund Button */
        .btn-fund {
            background-color: #28a745; 
            color: white; 
            padding: 4px 10px; 
            border-radius: 4px; 
            font-size: 0.8rem; 
            text-decoration: none;
            cursor: pointer;
            border: none;
            display: inline-block;
            margin-top: 5px;
        }
        .btn-fund:hover { background-color: #218838; }

        /* [ ... Rest of CSS ... ] */
        
        /* Base styles repeated for context */
        body { font-family: sans-serif; background: #f0f2f5; margin: 0; display: flex; }
        .sidebar { width: 250px; background: #fff; height: 100vh; position: fixed; padding: 20px; display: flex; flex-direction: column; }
        .main-content { margin-left: 250px; padding: 30px; width: calc(100% - 250px); }
        .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; }
        .header-actions { display: flex; align-items: center; gap: 15px; }
        .card { background: white; padding: 20px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.05); }
        .stats-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-bottom: 30px; }
    </style>
</head>
<body>

    <div class="sidebar">
        <h3>UI Market</h3>
        <a href="/buyer/dashboard">Dashboard</a>
        <a href="/logout" style="margin-top: auto; color: red;">Logout</a>
    </div>

    <div class="main-content">
        
        <div class="header">
            <h1>Dashboard</h1>
    
            <div class="header-actions">
                <div style="text-align: right; border-right: 1px solid #ddd; padding-right: 15px;">
                    <small style="color: #666;">Balance</small><br>
                    <strong style="font-size: 1.1rem;">₦<%= (user.wallet_balance || 0).toLocaleString() %></strong><br>
                    
                    <button class="btn-fund" onclick="initiatePayment()">+ Fund Wallet</button>
                </div>

                <a href="/logout">Logout</a>
            </div>
        </div>

        <div class="stats-grid">
            <div class="card" style="border-left: 5px solid #007bff;">
                <h3>Wallet Balance</h3>
                <div class="value">₦<%= (user.wallet_balance || 0).toLocaleString() %></div>
            </div>
            </div>

    </div>

    <script src="https://js.paystack.co/v1/inline.js"></script>

    <script>
        // Use the Public Key from your Paystack Dashboard (Settings > API Keys)
        const PAYSTACK_PUBLIC_KEY = 'pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx'; 

        function initiatePayment() {
            // 1. Ask user for amount
            const amountStr = prompt("Enter amount to fund (₦):");
            if (!amountStr) return;

            const amount = parseFloat(amountStr);
            if (isNaN(amount) || amount <= 0) {
                alert("Please enter a valid amount.");
                return;
            }

            // 2. Open Paystack Popup
            const handler = PaystackPop.setup({
                key: PAYSTACK_PUBLIC_KEY,
                email: "<%= user.email %>", // Ensure user.email is passed from backend
                amount: amount * 100, // Paystack works in Kobo (Naira * 100)
                currency: "NGN",
                ref: '' + Math.floor((Math.random() * 1000000000) + 1), // Generate a random ref
                
                // 3. Handle Success
                callback: function(response) {
                    // Redirect to your backend verification route
                    // We send the reference so the backend can confirm the payment really happened
                    window.location.href = "/paystack/verify?reference=" + response.reference;
                },
                
                // 4. Handle Close
                onClose: function() {
                    alert('Transaction was closed.');
                }
            });

            handler.openIframe();
        }
    </script>

</body>
</html>