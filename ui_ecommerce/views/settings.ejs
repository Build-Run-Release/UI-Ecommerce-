<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings | Campus Market</title>
    <link rel="stylesheet" href="/css/campus-theme.css">
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar-rewrite flex justify-between items-center">
        <a href="/" class="font-bold text-primary" style="font-size: 1.25rem;">CampusMarket</a>
        <a href="/" class="btn btn-sm btn-outline">Back to Home</a>
    </nav>

    <div class="container" style="max-width: 800px; margin-top: 2rem;">

        <div class="flex justify-between items-center" style="margin-bottom: 1.5rem;">
            <h1>Account Settings</h1>
        </div>

        <!-- Profile Card -->
        <div class="card" style="margin-bottom: 2rem;">
            <h3 style="margin-bottom: 1rem;">Profile Information</h3>

            <form action="/settings/profile" method="POST" class="flex flex-col gap-4">
                <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">

                <div class="grid grid-cols-2" style="gap: 1rem;">
                    <div>
                        <label class="text-xs font-bold text-muted uppercase">Username</label>
                        <input type="text" value="<%= user.username %>" class="input-base" disabled
                            style="background: #f1f5f9; color: #64748b;">
                    </div>
                    <div>
                        <label class="text-xs font-bold text-muted uppercase">Email</label>
                        <input type="email" name="email" value="<%= user.email || '' %>" class="input-base">
                    </div>
                </div>

                <div class="grid grid-cols-2" style="gap: 1rem;">
                    <div>
                        <label class="text-xs font-bold text-muted uppercase">Bank Name</label>
                        <input type="text" name="bank_name" value="<%= user.bank_name || '' %>" class="input-base"
                            placeholder="e.g. GTBank">
                    </div>
                    <div>
                        <label class="text-xs font-bold text-muted uppercase">Account Number</label>
                        <input type="text" name="account_number" value="<%= user.account_number || '' %>"
                            class="input-base" placeholder="0123456789">
                    </div>
                </div>

                <div class="flex justify-end">
                    <button class="btn btn-primary">Save Profile</button>
                </div>
            </form>
        </div>

        <!-- Security Card -->
        <div class="card">
            <h3 style="margin-bottom: 1rem;">Security</h3>

            <form action="/settings/password" method="POST" class="flex flex-col gap-4">
                <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">

                <div>
                    <label class="text-xs font-bold text-muted uppercase">Current Password</label>
                    <input type="password" name="current_password" class="input-base" required>
                </div>

                <div>
                    <label class="text-xs font-bold text-muted uppercase">New Password</label>
                    <input type="password" name="new_password" class="input-base" required minlength="6">
                </div>

                <!-- Captcha -->
                <div>
                    <label class="text-xs font-bold text-muted uppercase">Security Check</label>
                    <div class="flex items-center gap-2">
                        <div style="background: #f1f5f9; padding: 4px; border-radius: 4px;">
                            <img src="/captcha" alt="Captcha" style="cursor: pointer;" title="Refresh"
                                onclick="this.src='/captcha?'+Date.now()">
                        </div>
                        <input type="text" name="captcha" class="input-base" style="width: 150px;"
                            placeholder="Enter Code" required>
                    </div>
                    <% if (typeof captchaError !=='undefined' && captchaError) { %>
                        <div class="text-xs" style="color: var(--danger); margin-top: 4px;">
                            <%= captchaError %>
                        </div>
                        <% } %>
                </div>

                <div class="flex justify-end">
                    <button class="btn btn-secondary">Update Password</button>
                </div>
            </form>
        </div>

    </div>
</body>

</html>