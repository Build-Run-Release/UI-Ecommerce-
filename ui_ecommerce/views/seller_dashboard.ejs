<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Dashboard - UI Ecommerce</title>
    <style>
        /* 1. Base Styles (Same as Buyer) */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            display: flex;
            min-height: 100vh;
        }

        /* 2. Sidebar Navigation */
        .sidebar {
            width: 250px;
            background-color: #2c3e50; /* Darker for Sellers */
            padding: 20px;
            color: white;
            display: flex;
            flex-direction: column;
        }

        .brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #fff;
            margin-bottom: 40px;
            text-decoration: none;
        }

        .nav-links a {
            display: block;
            padding: 12px 15px;
            color: #bdc3c7;
            text-decoration: none;
            border-radius: 8px;
            margin-bottom: 10px;
            transition: background 0.2s;
        }

        .nav-links a:hover, .nav-links a.active {
            background-color: #34495e;
            color: #fff;
        }

        .logout-btn {
            margin-top: auto;
            color: #ff6b6b !important;
        }

        /* 3. Main Content Area */
        .main-content {
            flex: 1;
            padding: 30px;
            overflow-y: auto; /* Allows scrolling if content is long */
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        /* 4. Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .card {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            margin-bottom: 30px;
        }

        .card h3 { margin: 0 0 10px; color: #888; font-size: 0.9rem; font-weight: normal; }
        .card .value { font-size: 1.8rem; font-weight: bold; color: #333; }
        .card h2 { border-bottom: 1px solid #eee; padding-bottom: 15px; margin-top: 0; }

        /* 5. Tables & Forms */
        table { width: 100%; border-collapse: collapse; }
        th, td { text-align: left; padding: 15px; border-bottom: 1px solid #eee; }
        th { background-color: #fafafa; color: #666; font-size: 0.9rem; }

        .btn-action {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 0.9rem;
        }
        .btn-delete { background-color: #dc3545; }
        .btn-shipped { background-color: #28a745; }

        input, textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box;
        }
        
        label { display: block; margin-bottom: 5px; font-weight: bold; color: #555; }

    </style>
</head>
<body>

    <div class="sidebar">
        <a href="/" class="brand">Seller Center</a>
        
        <div class="nav-links">
            <a href="/seller/dashboard" class="active">Dashboard</a>
            <a href="#add-product" onclick="document.getElementById('add-product').scrollIntoView({behavior: 'smooth'})">Add Product</a>
            <a href="#orders" onclick="document.getElementById('orders').scrollIntoView({behavior: 'smooth'})">Incoming Orders</a>
            <a href="#settings" onclick="document.getElementById('settings').scrollIntoView({behavior: 'smooth'})">Payout Settings</a>
            <a href="/">Go to Shop</a>
            <a href="/logout" class="logout-btn">Logout</a>
        </div>
    </div>

    <div class="main-content">
        
        <div class="header">
            <h1>Hello, <%= user.username %></h1>
            <div>
                <strong>Shop Status:</strong> <span style="color: #28a745;">Active</span>
            </div>
        </div>

        <div class="stats-grid">
            <div class="card" style="border-left: 5px solid #28a745;">
                <h3>Wallet Balance</h3>
                <div class="value">₦<%= (user.wallet_balance || 0).toLocaleString() %></div>
            </div>
            <div class="card" style="border-left: 5px solid #007bff;">
                <h3>Active Products</h3>
                <div class="value"><%= products.length %></div>
            </div>
            <div class="card" style="border-left: 5px solid #ffc107;">
                <h3>Orders to Ship</h3>
                <div class="value"><%= orders.filter(o => !o.seller_confirmed).length %></div>
            </div>
        </div>

        <div id="orders" class="card">
            <h2>Incoming Orders (Shipments)</h2>
            <% if (orders && orders.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Item</th>
                            <th>Earnings</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(function(order) { %>
                            <tr>
                                <td>#<%= order.id %></td>
                                <td>Item #<%= order.product_id %></td>
                                <td>₦<%= order.seller_amount %></td>
                                <td>
                                    <% if (order.buyer_confirmed) { %>
                                        <span style="color: green; font-weight: bold;">Funds Released</span>
                                    <% } else if (order.seller_confirmed) { %>
                                        <span style="color: blue;">Shipped (Waiting for Buyer)</span>
                                    <% } else { %>
                                        <span style="color: orange;">Pending Shipment</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (!order.seller_confirmed) { %>
                                        <form action="/order/<%= order.id %>/confirm/seller" method="POST">
                                            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                                            <button type="submit" class="btn-action btn-shipped">Mark as Sent</button>
                                        </form>
                                    <% } else { %>
                                        ✓
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p style="color: #999;">No orders yet.</p>
            <% } %>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
            
            <div id="add-product" class="card">
                <h2>Add New Product</h2>
                <form action="/seller/add-product" method="POST">
                    <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                    
                    <label>Product Title</label>
                    <input type="text" name="title" required placeholder="e.g. iPhone 15">

                    <div style="display: flex; gap: 10px;">
                        <div style="flex: 1;">
                            <label>Price (₦)</label>
                            <input type="number" name="price" required>
                        </div>
                    </div>

                    <label>Description</label>
                    <textarea name="description" rows="3" required></textarea>

                    <label>Image URL</label>
                    <input type="text" name="image" placeholder="https://example.com/image.jpg">

                    <button type="submit" class="btn-action" style="width: 100%;">Publish Product</button>
                </form>
            </div>

            <div id="settings" class="card">
                <h2>Payout Details</h2>
                <p style="color: #666; font-size: 0.9rem;">Where should we send your money?</p>
                <form action="/seller/onboard" method="POST">
                    <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                    
                    <label>Bank Name</label>
                    <input type="text" name="bank_name" value="<%= user.bank_name || '' %>" required>

                    <label>Account Number</label>
                    <input type="text" name="account_number" value="<%= user.account_number || '' %>" required>

                    <label>Bank Code</label>
                    <input type="text" name="bank_code" value="<%= user.bank_code || '' %>" required>

                    <button type="submit" class="btn-action" style="background-color: #6c757d; width: 100%;">Save Details</button>
                </form>
            </div>
        </div>

        <div class="card">
            <h2>My Inventory</h2>
            <% if (products && products.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Price</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(function(product) { %>
                            <tr>
                                <td>
                                    <img src="<%= product.image_url || product.image %>" width="40" height="40" style="border-radius: 4px; object-fit: cover;">
                                </td>
                                <td><%= product.name || product.title %></td>
                                <td>₦<%= product.price %></td>
                                <td>
                                    <form action="/seller/product/<%= product.id %>/delete" method="POST" onsubmit="return confirm('Delete this item?');">
                                        <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                                        <button type="submit" class="btn-action btn-delete">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p style="color: #999;">You haven't listed any products yet.</p>
            <% } %>
        </div>

    </div>

</body>
</html>