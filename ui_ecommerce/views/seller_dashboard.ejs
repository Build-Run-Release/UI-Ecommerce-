<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Dashboard - UI Market</title>
    <style>
        /* --- 1. Base Styles --- */
        * { box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            display: flex;
            min-height: 100vh;
        }

        /* --- 2. Sidebar Navigation (Dark Theme for Sellers) --- */
        .sidebar {
            width: 250px;
            background-color: #2c3e50; /* Dark Blue-Grey */
            padding: 20px;
            color: white;
            display: flex;
            flex-direction: column;
            
            /* Responsive Setup */
            position: fixed;
            top: 0; left: 0; height: 100vh;
            z-index: 1000;
            transition: transform 0.3s ease-in-out;
        }

        /* Desktop: Sidebar is static, Mobile: Hidden by default */
        @media (min-width: 769px) {
            .sidebar { position: sticky; transform: none; }
        }
        @media (max-width: 768px) {
            .sidebar { transform: translateX(-100%); }
            .sidebar.active { transform: translateX(0); }
        }

        .brand {
            font-size: 1.5rem; font-weight: bold; color: #fff;
            margin-bottom: 40px; text-decoration: none; display: flex; justify-content: space-between;
        }
        
        .nav-links a {
            display: block; padding: 12px 15px; color: #bdc3c7;
            text-decoration: none; border-radius: 8px; margin-bottom: 10px;
            transition: 0.2s;
        }
        .nav-links a:hover, .nav-links a.active {
            background-color: #34495e; color: #fff;
        }
        .logout-btn { margin-top: auto; color: #ff6b6b !important; }

        /* Close button for mobile sidebar */
        .close-sidebar { display: none; cursor: pointer; background: none; border: none; color: white; font-size: 1.5rem; }
        @media (max-width: 768px) { .close-sidebar { display: block; } }

        /* --- 3. Main Content --- */
        .main-content {
            flex: 1; padding: 30px; width: 100%; overflow-x: hidden;
        }

        .header {
            display: flex; justify-content: space-between; align-items: center;
            margin-bottom: 30px;
        }

        /* Hamburger Menu */
        .menu-toggle {
            display: none; font-size: 1.5rem; cursor: pointer; background: none; border: none; margin-right: 15px;
        }
        @media (max-width: 768px) { .menu-toggle { display: block; } }

        /* --- 4. Profile & Upload Styles --- */
        .header-actions { display: flex; align-items: center; gap: 20px; }
        
        .profile-wrapper { position: relative; }
        .profile-img-container {
            position: relative; width: 45px; height: 45px; cursor: pointer;
        }
        .profile-img {
            width: 100%; height: 100%; border-radius: 50%; object-fit: cover;
            border: 2px solid white; box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .camera-overlay {
            position: absolute; bottom: -2px; right: -5px;
            background: #007bff; color: white; border-radius: 50%;
            width: 20px; height: 20px; display: flex; align-items: center; justify-content: center;
            font-size: 12px; border: 2px solid white;
        }

        .dropdown-menu {
            display: none; position: absolute; right: 0; top: 55px;
            background-color: white; min-width: 200px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.15); border-radius: 10px;
            z-index: 999; border: 1px solid #eee; overflow: hidden;
        }
        .dropdown-menu.show { display: block; }
        .dropdown-menu a {
            display: flex; align-items: center; gap: 10px; padding: 12px 15px;
            color: #333; text-decoration: none; transition: 0.2s;
        }
        .dropdown-menu a:hover { background: #f8f9fa; color: #007bff; }

        /* --- 5. Content Cards & Tables --- */
        .card {
            background: white; padding: 20px; border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05); margin-bottom: 30px;
        }
        .card h2 { margin-top: 0; border-bottom: 1px solid #eee; padding-bottom: 15px; font-size: 1.2rem; }

        table { width: 100%; border-collapse: collapse; min-width: 600px; }
        .table-responsive { overflow-x: auto; }
        th, td { text-align: left; padding: 15px; border-bottom: 1px solid #eee; }
        th { background-color: #fafafa; color: #666; font-size: 0.9rem; }

        /* Buttons & Forms */
        .btn-action { padding: 8px 15px; border-radius: 6px; border: none; cursor: pointer; color: white; font-weight: 500; }
        .btn-primary { background-color: #007bff; }
        .btn-delete { background-color: #dc3545; }
        .btn-shipped { background-color: #28a745; }
        
        input, textarea {
            width: 100%; padding: 10px; margin-bottom: 15px;
            border: 1px solid #ddd; border-radius: 6px;
        }

        /* --- 6. Modal Styles (Add Product) --- */
        .modal {
            display: none; position: fixed; z-index: 2000;
            left: 0; top: 0; width: 100%; height: 100%;
            background-color: rgba(0,0,0,0.5);
            align-items: center; justify-content: center;
        }
        .modal.active { display: flex; }
        .modal-content {
            background-color: white; padding: 25px; border-radius: 12px;
            width: 90%; max-width: 500px; position: relative;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }
        .close-modal {
            position: absolute; top: 15px; right: 15px; font-size: 1.5rem; cursor: pointer; color: #999;
        }
        .file-upload-box {
            border: 2px dashed #ccc; padding: 20px; text-align: center;
            border-radius: 8px; cursor: pointer; margin-bottom: 15px;
        }
        .file-upload-box:hover { border-color: #007bff; background: #f0f8ff; }

        /* Overlay for Mobile Sidebar */
        .overlay {
            display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0,0,0,0.5); z-index: 998;
        }
        .overlay.active { display: block; }
    </style>
</head>
<body>

    <div class="overlay" onclick="toggleSidebar()"></div>

    <div class="sidebar" id="sidebar">
        <div class="brand">
            <span>Seller Center</span>
            <button class="close-sidebar" onclick="toggleSidebar()">√ó</button>
        </div>
        
        <div class="nav-links">
            <a href="/seller/dashboard" class="active">Dashboard</a>
            <a href="#" onclick="toggleModal('addProductModal')">Ôºã List New Item</a> <a href="#orders">Incoming Orders</a>
            <a href="#inventory">My Inventory</a>
            <a href="#settings">Payout Settings</a>
            <a href="/">Go to Shop</a>
            <a href="/logout" class="logout-btn">Logout</a>
        </div>
    </div>

    <div class="main-content">
        
        <div class="header">
            <div style="display: flex; align-items: center;">
                <button class="menu-toggle" onclick="toggleSidebar()">‚ò∞</button>
                <h1 style="margin: 0;">Seller Dashboard</h1>
            </div>
    
            <div class="header-actions">
                <button class="btn-action btn-primary" onclick="toggleModal('addProductModal')" style="display: flex; align-items: center; gap: 5px;">
                    <span>Ôºã</span> <span style="display: none; @media(min-width: 600px){ display: inline; }">List Item</span>
                </button>

                <div style="text-align: right; margin-right: 10px;">
                    <small style="color: #666;">Earnings</small><br>
                    <strong>‚Ç¶<%= (user.wallet_balance || 0).toLocaleString() %></strong>
                </div>

                <div class="profile-wrapper">
                    <div class="profile-img-container" onclick="toggleProfileMenu(event)">
                        <img 
                            src="<%= user.profile_image ? '/uploads/' + user.profile_image : 'https://ui-avatars.com/api/?name=' + user.username + '&background=6610f2&color=fff' %>" 
                            class="profile-img"
                        >
                        <div class="camera-overlay" onclick="triggerProfileUpload(event)">üì∑</div>
                    </div>

                    <form id="profileUploadForm" action="/user/upload-photo" method="POST" enctype="multipart/form-data" style="display: none;">
                        <input type="file" name="profile_picture" id="profileInput" accept="image/*" onchange="this.form.submit()">
                    </form>

                    <div id="profileDropdown" class="dropdown-menu">
                        <div style="padding: 15px; border-bottom: 1px solid #eee; background: #fafafa;">
                            <small>Seller Account</small><br>
                            <strong><%= user.username %></strong>
                        </div>
                        <a href="/"><span>üè†</span> Go to Shop</a>
                        <a href="/ads/buy"><span>üì¢</span> Promote Items</a>
                        <a href="#settings"><span>‚öô</span> Settings</a>
                        <div style="height: 1px; background: #eee; margin: 0;"></div>
                        <a href="/logout" style="color: #dc3545;"><span>üö™</span> Logout</a>
                    </div>
                </div>
            </div>
        </div>

        <div id="orders" class="card">
            <h2>Incoming Orders (Shipments)</h2>
            <div class="table-responsive">
                <% if (orders && orders.length > 0) { %>
                    <table>
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Item</th>
                                <th>Earnings</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach(function(order) { %>
                                <tr>
                                    <td>#<%= order.id %></td>
                                    <td>Item #<%= order.product_id %></td>
                                    <td>‚Ç¶<%= order.seller_amount %></td>
                                    <td>
                                        <% if (order.buyer_confirmed) { %>
                                            <span style="color: green; font-weight: bold;">Funds Released</span>
                                        <% } else if (order.seller_confirmed) { %>
                                            <span style="color: blue;">Shipped</span>
                                        <% } else { %>
                                            <span style="color: orange;">Pending Shipment</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (!order.seller_confirmed) { %>
                                            <form action="/order/<%= order.id %>/confirm/seller" method="POST">
                                                <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                                                <button type="submit" class="btn-action btn-shipped">Mark as Sent</button>
                                            </form>
                                        <% } else { %>
                                            ‚úì
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p style="color: #999;">No orders yet.</p>
                <% } %>
            </div>
        </div>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px;">
            
            <div id="settings" class="card">
                <h2>Payout Details</h2>
                <p style="color: #666; font-size: 0.9rem; margin-top: -10px;">Where should we send your money?</p>
                <form action="/seller/onboard" method="POST">
                    <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                    
                    <label>Bank Name</label>
                    <input type="text" name="bank_name" value="<%= user.bank_name || '' %>" placeholder="e.g. GTBank" required>

                    <label>Account Number</label>
                    <input type="text" name="account_number" value="<%= user.account_number || '' %>" placeholder="0123456789" required>

                    <label>Bank Code</label>
                    <input type="text" name="bank_code" value="<%= user.bank_code || '' %>" placeholder="058" required>

                    <button type="submit" class="btn-action" style="background-color: #6c757d; width: 100%;">Save Details</button>
                </form>
            </div>

            <div id="inventory" class="card">
                <h2>My Inventory</h2>
                <div class="table-responsive">
                    <% if (products && products.length > 0) { %>
                        <table>
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Title</th>
                                    <th>Price</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% products.forEach(function(product) { %>
                                    <tr>
                                        <td>
                                            <img src="<%= product.image && !product.image.startsWith('http') ? '/uploads/' + product.image : (product.image || 'https://via.placeholder.com/40') %>" 
                                                 width="40" height="40" style="border-radius: 4px; object-fit: cover;">
                                        </td>
                                        <td><%= product.name || product.title %></td>
                                        <td>‚Ç¶<%= product.price %></td>
                                        <td>
                                            <form action="/seller/product/<%= product.id %>/delete" method="POST" onsubmit="return confirm('Delete this item?');">
                                                <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                                                <button type="submit" class="btn-action btn-delete">√ó</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <p style="color: #999;">No products listed.</p>
                    <% } %>
                </div>
            </div>
        </div>

    </div>

    <div id="addProductModal" class="modal">
        <div class="modal-content">
            <span class="close-modal" onclick="toggleModal('addProductModal')">&times;</span>
            <h2>List New Product</h2>
            
            <form action="/seller/add-product?_csrf=<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                
                <label>Product Title</label>
                <input type="text" name="title" required placeholder="e.g. MTH 101 Textbook">

                <label>Price (‚Ç¶)</label>
                <input type="number" name="price" required placeholder="2500">

                <label>Description</label>
                <textarea name="description" rows="3" required placeholder="Describe condition, pickup location..."></textarea>

                <label>Product Image</label>
                <div class="file-upload-box" onclick="document.getElementById('prodImg').click()">
                    <span style="font-size: 2rem;">‚òÅ</span><br>
                    <span>Click to Upload Image</span>
                    <input type="file" name="image" id="prodImg" accept="image/*" style="display: none;" onchange="previewFile()">
                </div>
                
                <div id="previewContainer" style="display: none; text-align: center; margin-bottom: 15px;">
                    <img id="imgPreview" src="" style="width: 100px; height: 100px; object-fit: cover; border-radius: 8px;">
                </div>

                <button type="submit" class="btn-action btn-primary" style="width: 100%;">Publish Product</button>
            </form>
        </div>
    </div>

    <script>
        // Sidebar Toggle
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('active');
            document.querySelector('.overlay').classList.toggle('active');
        }

        // Profile Dropdown Toggle
        function toggleProfileMenu(event) {
            event.stopPropagation();
            document.getElementById("profileDropdown").classList.toggle("show");
        }

        // Trigger Hidden File Input for Profile
        function triggerProfileUpload(event) {
            event.stopPropagation();
            document.getElementById('profileInput').click();
        }

        // Modal Logic
        function toggleModal(modalId) {
            const modal = document.getElementById(modalId);
            modal.classList.toggle('active');
        }

        // Image Preview Logic
        function previewFile() {
            const preview = document.getElementById('imgPreview');
            const container = document.getElementById('previewContainer');
            const file = document.getElementById('prodImg').files[0];
            const reader = new FileReader();

            reader.onloadend = function () {
                preview.src = reader.result;
                container.style.display = 'block';
            }

            if (file) {
                reader.readAsDataURL(file);
            } else {
                preview.src = "";
            }
        }

        // Close Elements when clicking outside
        window.onclick = function(event) {
            // Close Dropdown
            if (!event.target.closest('.profile-img-container')) {
                const dropdowns = document.getElementsByClassName("dropdown-menu");
                for (let i = 0; i < dropdowns.length; i++) {
                    if (dropdowns[i].classList.contains('show')) {
                        dropdowns[i].classList.remove('show');
                    }
                }
            }
            // Close Modal
            if (event.target.classList.contains('modal')) {
                event.target.classList.remove('active');
            }
        }
    </script>

</body>
</html>