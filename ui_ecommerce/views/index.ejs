<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campus Market | UI</title>
    <!-- New Campus Theme -->
    <link rel="stylesheet" href="/css/campus-theme.css">
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar-rewrite flex justify-between items-center">
        <a href="/" class="font-bold text-primary" style="font-size: 1.25rem;">CampusMarket</a>

        <div class="flex gap-2 items-center">
            <% if (typeof user !=='undefined' && user) { %>
                <a href="<%= user.role === 'seller' ? '/seller/dashboard' : '/buyer/dashboard' %>"
                    class="btn btn-outline text-sm">
                    Dashboard
                </a>
                <% } else { %>
                    <a href="/login" class="btn btn-outline text-sm">Login</a>
                    <a href="/signup" class="btn btn-primary text-sm">Join</a>
                    <% } %>
        </div>
    </nav>

    <!-- Hero Hub -->
    <header class="hero-hub">
        <div class="container">
            <h1 style="font-size: 2rem; margin-bottom: 0.5rem;">The Campus Hub</h1>
            <p style="opacity: 0.9;">Buy, sell, and trade safely within your university.</p>

            <div class="hero-search-wrapper">
                <form action="/" method="GET" class="flex" style="width: 100%; align-items: center;">
                    <input type="text" name="search" class="hero-search-input"
                        placeholder="Search textbooks, furniture..."
                        value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>">
                    <button type="submit" class="btn btn-primary"
                        style="border-radius: 99px; margin: 4px;">Search</button>
                </form>
            </div>
        </div>
    </header>

    <div class="container">
        <!-- Categories (Scroll Snap) -->
        <div class="scroll-snap-x" style="margin-bottom: 2rem;">
            <a href="/" class="cat-bubble">
                <div class="cat-icon <%= !currentCategory ? 'active' : '' %>">üè†</div>
                <span class="text-xs font-medium">All</span>
            </a>
            <% if (typeof categories !=='undefined' ) { %>
                <% categories.forEach(function(cat) { %>
                    <a href="/?category=<%= cat %>" class="cat-bubble">
                        <div class="cat-icon <%= currentCategory === cat ? 'active' : '' %>">
                            <!-- Simple heuristic for icons -->
                            <%= cat.toLowerCase().includes('book') ? 'üìö' : cat.toLowerCase().includes('tech') ? 'üíª' :
                                cat.toLowerCase().includes('fashion') ? 'üëï' : 'üì¶' %>
                        </div>
                        <span class="text-xs font-medium">
                            <%= cat %>
                        </span>
                    </a>
                    <% }); %>
                        <% } %>
        </div>

        <!-- Section Header -->
        <div class="flex justify-between items-center" style="margin-bottom: 1rem;">
            <h2 style="font-size: 1.25rem;">Trending on Campus</h2>
            <!-- Filter Toggle (Mobile) or Dropdown could go here -->
        </div>

        <!-- Product Grid -->
        <div class="product-grid grid grid-cols-2 md:grid-cols-3 md:grid-cols-4">
            <% if (typeof products !=='undefined' && products.length> 0) { %>
                <% products.forEach(function(product) { %>
                    <div class="card product-card" style="padding: 0; border: none; overflow: hidden;">
                        <a href="/buy/<%= product.id %>" class="product-img-wrapper">
                            <img src="<%= product.image_url && !product.image_url.startsWith('http') ? '/uploads/' + product.image_url : (product.image_url || '/images/placeholder.svg') %>"
                                alt="<%= product.title %>" class="product-img">
                            <% if (product.condition==='New' ) { %>
                                <span class="badge badge-new"
                                    style="position: absolute; top: 8px; left: 8px;">New</span>
                                <% } %>
                        </a>
                        <div class="product-info">
                            <div class="flex justify-between items-start">
                                <h3 class="font-medium text-sm" style="margin-bottom: 4px; line-height: 1.3;">
                                    <a href="/buy/<%= product.id %>">
                                        <%= product.title %>
                                    </a>
                                </h3>
                            </div>
                            <!-- Condition / Dorm Tag -->
                            <div class="text-xs text-muted" style="margin-bottom: 8px;">
                                <%= product.category %> ‚Ä¢ <%= product.campus_zone || 'Campus' %>
                            </div>

                            <div class="product-price">‚Ç¶<%= parseInt(product.price).toLocaleString() %>
                            </div>

                            <!-- Quick Actions (Hover or always visible on mobile?) -->
                            <div class="flex gap-2" style="margin-top: 10px;">
                                <form action="/cart/add" method="POST" class="flex-1">
                                    <input type="hidden" name="product_id" value="<%= product.id %>">
                                    <input type="hidden" name="_csrf"
                                        value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
                                    <button type="submit" class="btn btn-primary"
                                        style="width: 100%; padding: 0.5rem; font-size: 0.8rem;">Add</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <div style="grid-column: 1 / -1; text-align: center; padding: 4rem;">
                                <p class="text-muted">No items found.</p>
                                <a href="/" class="btn btn-outline" style="margin-top: 1rem;">Clear Filters</a>
                            </div>
                            <% } %>
        </div>
    </div>

    <!-- Safety / Campus Updates Banner (Fixed Bottom) -->
    <% if (typeof ads !=='undefined' && ads && ads.length> 0) { %>
        <div
            style="position: fixed; bottom: 1rem; right: 1rem; left: 1rem; max-width: 400px; margin: 0 auto; background: var(--surface-card); border: 1px solid var(--border); padding: 1rem; border-radius: var(--radius-md); box-shadow: var(--shadow-lg); background: white; z-index: 100;">
            <div class="flex justify-between items-center" style="margin-bottom: 0.5rem;">
                <span class="font-bold text-sm text-primary">Campus Updates</span>
                <button onclick="this.parentElement.parentElement.remove()"
                    style="background:none; border:none; font-size:1.2rem;">&times;</button>
            </div>
            <ul class="text-sm text-muted">
                <% ads.forEach(function(ad) { %>
                    <li>‚Ä¢ <%= ad.message %>
                    </li>
                    <% }); %>
            </ul>
        </div>
        <% } %>

            <script src="/js/main.js"></script>
</body>

</html>