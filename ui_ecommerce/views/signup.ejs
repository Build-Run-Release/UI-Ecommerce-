<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up | Campus Market</title>
    <link rel="stylesheet" href="/css/campus-theme.css">
</head>

<body style="display:flex; align-items:center; justify-content:center; min-height:100vh; padding: 2rem 0;">

    <div class="card" style="width: 100%; max-width: 500px; padding: 2rem;">
        <div class="text-center" style="margin-bottom: 2rem;">
            <h1 class="text-primary font-bold" style="font-size: 1.5rem;">Join CampusMarket</h1>
            <p class="text-muted">Buy, sell, and connect safely.</p>
        </div>

        <% if (typeof error !=='undefined' && error) { %>
            <div
                style="background: #fee2e2; color: #b91c1c; padding: 0.75rem; border-radius: 8px; font-size: 0.9rem; margin-bottom: 1rem;">
                <%= error %>
            </div>
            <% } %>

                <form action="/signup" method="POST" enctype="multipart/form-data" class="flex flex-col gap-4">
                    <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">

                    <div class="grid grid-cols-2" style="gap: 1rem;">
                        <div>
                            <label class="text-xs font-bold text-muted uppercase">Username</label>
                            <input type="text" name="username" class="input-base" required>
                        </div>
                        <div>
                            <label class="text-xs font-bold text-muted uppercase">Role</label>
                            <select name="role" class="input-base">
                                <option value="buyer">I want to Buy</option>
                                <option value="seller">I want to Sell</option>
                            </select>
                        </div>
                    </div>

                    <div>
                        <label class="text-xs font-bold text-muted uppercase">School Email</label>
                        <input type="email" name="email" class="input-base" placeholder="student@university.edu.ng"
                            required onchange="validateSchoolEmail(this)">
                        <small class="text-muted text-xs">Use your .edu or .ac.ng email for verification.</small>
                    </div>

                    <div>
                        <label class="text-xs font-bold text-muted uppercase">Password</label>
                        <input type="password" name="password" class="input-base" required>
                    </div>

                    <div class="grid grid-cols-2" style="gap: 1rem;">
                        <div>
                            <label class="text-xs font-bold text-muted uppercase">Dorm / Hall</label>
                            <input type="text" name="dorm" class="input-base" placeholder="e.g. Mellanby" required>
                        </div>
                        <div>
                            <label class="text-xs font-bold text-muted uppercase">Phone Number</label>
                            <input type="tel" name="phone_number" class="input-base" placeholder="+234..." required>
                            <small class="text-muted text-xs">For MFA Security</small>
                        </div>
                    </div>

                    <div>
                        <label class="text-xs font-bold text-muted uppercase">Student ID / Verification (Camera)</label>
                        <input type="file" name="university_id_image" class="input-base" accept="image/*"
                            capture="environment">
                        <small class="text-muted text-xs">Snap a photo of your Student ID or select from
                            gallery.</small>
                    </div>

                    <div class="flex items-center gap-2" style="margin-top: 0.5rem;">
                        <input type="checkbox" name="terms" required style="width: auto;">
                        <span class="text-sm">I agree to the <a href="/terms" class="text-primary">Terms &
                                Conditions</a></span>
                    </div>

                    <button class="btn btn-primary" style="width: 100%;">Create Account</button>
                </form>

                <div class="text-center" style="margin-top: 1.5rem; font-size: 0.9rem;">
                    Already have an account? <a href="/login" class="text-primary font-bold">Log In</a>
                </div>
    </div>

    <script>
        function validateSchoolEmail(input) {
            const val = input.value.toLowerCase();
            if (!val.endsWith('.edu') && !val.endsWith('.edu.ng') && !val.endsWith('.ac.ng')) {
                // Just a warning UI, strictly handled on server
                input.style.borderColor = 'orange';
            } else {
                input.style.borderColor = 'var(--secondary)';
            }
        }
    </script>
</body>

</html>